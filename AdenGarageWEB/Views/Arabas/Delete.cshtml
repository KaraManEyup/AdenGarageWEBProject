@model Core.Models.Araba

@{
    ViewData["Title"] = "Araba Sil";
}

<h1 class="text-center mb-4 text-danger">Araba Sil</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-danger text-white">
                    <h4 class="m-0">Araba Silme İşlemi</h4>
                </div>
                <div class="card-body">
                    <h3 class="text-center text-warning mb-4">Bu arabayı silmek istediğinizden emin misiniz?</h3>

                    <!-- Araba Bilgileri Tablosu -->
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Bilgi Türü</th>
                                <th>Değer</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="fw-bold">Marka</td>
                                <td>@Html.DisplayFor(model => model.Marka)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Model</td>
                                <td>@Html.DisplayFor(model => model.Model)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Kilometre</td>
                                <td>@Html.DisplayFor(model => model.Km)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">İşlem</td>
                                <td>@Html.DisplayFor(model => model.Islem)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Tarih</td>
                                <td>@Html.DisplayFor(model => model.Tarih)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Müşteri</td>
                                <td>@Html.DisplayFor(model => model.Musteri.Isim)</td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Silme Formu -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-danger btn-lg px-5 shadow-sm">Sil</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-5 ms-3 shadow-sm">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

