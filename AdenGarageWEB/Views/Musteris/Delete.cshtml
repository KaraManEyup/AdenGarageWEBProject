@model Core.Models.Musteri

@{
    ViewData["Title"] = "Müşteri Detayları";
}

<div class="container mt-5">

    <!-- Üst Bilgiler (Site ve Sayfa Hakkında Kısa Bilgi) -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <div class="alert alert-info p-4 shadow-lg" role="alert" style="font-size: 1.1rem; background-color: #f0f8ff; border-left: 5px solid #5bc0de;">
                <h4 class="alert-heading text-primary">AdenGarage'a Hoş Geldiniz!</h4>
                <p>Burada müşteri bilgileri, kayıtlı arabalar ve servis geçmişinizi görüntüleyebilirsiniz. Kolay erişim ve güncel veriler ile AdenGarage'da her zaman yanınızdayız.</p>
                <hr>
                <p class="mb-0">Müşteri detayları sayfası, aracınızla ilgili tüm bilgileri gösterir. İhtiyacınız olan her şey burada!</p>
            </div>
        </div>
    </div>

    <!-- Başlık -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-dark font-weight-bold" style="font-size: 3rem;">Müşteri Detayları</h1>
        <p class="lead text-muted">Detaylı müşteri bilgilerinizi ve kayıtlı arabalarınızı aşağıda bulabilirsiniz.</p>
    </div>

    <!-- Müşteri Bilgileri -->
    <div class="card border-0 shadow-sm" style="background-color: #ffffff; border-radius: 12px;">
        <div class="card-body" style="padding: 2rem;">
            <h5 class="text-info font-weight-bold" style="font-size: 2rem; border-bottom: 2px solid #e0e0e0; padding-bottom: 10px;">Müşteri Bilgileri</h5>
            <dl class="row mt-4">
                <dt class="col-sm-4" style="font-weight: 600; font-size: 1.3rem;">İsim:</dt>
                <dd class="col-sm-8 text-dark" style="font-size: 1.4rem; color: #007bff;">@Model.Isim</dd>

                <dt class="col-sm-4" style="font-weight: 600; font-size: 1.3rem;">Soyisim:</dt>
                <dd class="col-sm-8 text-dark" style="font-size: 1.4rem; color: #007bff;">@Model.Soyisim</dd>

                <dt class="col-sm-4" style="font-weight: 600; font-size: 1.3rem;">Telefon:</dt>
                <dd class="col-sm-8 text-dark" style="font-size: 1.4rem; color: #007bff;">@Model.Telefon</dd>
            </dl>
        </div>
    </div>

    <!-- Kayitli Arabalar -->
    <div class="mt-5">
        <h5 class="text-primary font-weight-bold" style="font-size: 2rem;">Kayıtlı Arabalar</h5>
        <div class="row mt-4">
            @if (Model.Arabalar != null && Model.Arabalar.Any())
            {
                @foreach (var araba in Model.Arabalar.OrderBy(a => a.Tarih))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-lg" style="border-radius: 15px; transition: transform 0.3s ease-in-out;">
                            <div class="card-body" style="background-color: #f9f9f9; padding: 20px;">

                                <dl class="row">
                                    <dt class="col-sm-4" style="font-weight: 600; font-size: 1.3rem;">Marka:</dt>
                                    <dd class="col-sm-8 text-dark" style="font-size: 1.4rem;">@araba.Marka</dd>

                                    <dt class="col-sm-4" style="font-weight: 600; font-size: 1.3rem;">Model:</dt>
                                    <dd class="col-sm-8 text-dark" style="font-size: 1.4rem;">@araba.Model</dd>

                                    <dt class="col-sm-4" style="font-weight: 600; font-size: 1.3rem;">Plaka:</dt>
                                    <dd class="col-sm-8 text-dark" style="font-size: 1.4rem;">@araba.Plaka</dd>

                                    <dt class="col-sm-4" style="font-weight: 600; font-size: 1.3rem;">Kilometre:</dt>
                                    <dd class="col-sm-8 text-dark" style="font-size: 1.4rem;">@araba.Km</dd>

                                    <dt class="col-sm-4" style="font-weight: 600; font-size: 1.3rem;">İşlem:</dt>
                                    <dd class="col-sm-8 text-dark" style="font-size: 1.4rem;">@araba.Islem</dd>

                                    <dt class="col-sm-4" style="font-weight: 600; font-size: 1.3rem;">Geliş Tarihi:</dt>
                                    <dd class="col-sm-8 text-dark" style="font-size: 1.4rem;">@araba.Tarih?.ToString("dd-MM-yyyy")</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted" style="font-size: 1.2rem;">Bu müşteri için araba kaydı bulunmamaktadır.</p>
            }
        </div>
    </div>

    <!-- Silme ve İptal Butonları -->
    <div class="d-flex justify-content-center mt-5">
        <form asp-action="Delete" method="post" class="w-50">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <button type="submit" class="btn btn-danger btn-lg w-100 py-3">Müşteriyi Sil</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-100 mt-3 py-3">İptal</a>
            </div>
        </form>
    </div>

    <!-- Footer -->
    <div class="text-center mt-5">
        <p class="text-muted" style="font-size: 1.2rem;">&copy; 2024 AdenGarage. Tüm hakları saklıdır.</p>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
}
