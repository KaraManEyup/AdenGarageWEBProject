@model IEnumerable<Core.Models.Musteri>

@{
    ViewData["Title"] = "Index";
}



<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-header bg-info text-white">
        Müşteriler
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Telefon</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var musteri in Model)
                {
                    <tr>
                        <td>@musteri.Isim</td>
                        <td>@musteri.Soyisim</td>
                        <td>@musteri.Telefon</td>
                        <td>
                            <a href="@Url.Action("Edit", "Musteris", new { id = musteri.Id })" class="btn btn-warning btn-sm">Düzenle</a>
                            <a href="@Url.Action("Delete", "Musteris", new { id = musteri.Id })" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="@Url.Action("Create", "Musteris")" class="btn btn-primary">Yeni Müşteri Ekle</a>
    </div>
</div>