@model IEnumerable<Core.Models.Musteri>

@{
    ViewData["Title"] = "Müşteri Listesi";
}

<!-- Sayfa Başlığı -->
<header class="text-center py-5 bg-gradient text-white border-bottom">
    <h1 class="display-4 font-weight-bold animatedTitle">Müşteri Listesi</h1>
    <p class="lead mb-4">Tüm müşterileriniz ve araçları hakkında bilgilere anında ulaşın. Daha fazlasını keşfedin!</p>

    <!-- İstatistik ve Heyecan Verici Bilgiler -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
            <div class="card shadow border-light rounded-lg">
                <div class="card-body text-center">
                    <h5 class="card-title">Toplam Müşteri Sayısı</h5>
                    <p class="card-text display-4 text-primary">@Model.Count()</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
            <div class="card shadow border-light rounded-lg">
                <div class="card-body text-center">
                    <h5 class="card-title">Toplam Araç Sayısı</h5>
                    <p class="card-text display-4 text-success">@Model.Sum(m => m.Arabalar?.Count() ?? 0)</p>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Filtreleme ve Sıralama Butonları -->
<div class="d-flex justify-content-between mb-4 align-items-center flex-wrap">
    <!-- Sıralama ve Filtreleme -->
    <div class="d-flex flex-wrap">
        <a class="btn btn-outline-secondary mx-2" href="@Url.Action("Index", "Musteris", new { sortOrder = "IsimAsc" })">İsim Artan</a>
        <a class="btn btn-outline-secondary mx-2" href="@Url.Action("Index", "Musteris", new { sortOrder = "IsimDesc" })">İsim Azalan</a>
    </div>
    <!-- Yeni Müşteri Ekle Butonu -->
    <div>
        <a href="@Url.Action("Create", "Musteris")" class="btn btn-primary btn-lg">Yeni Müşteri Ekle</a>
    </div>
</div>

<!-- Müşteri Listeleme -->
<div class="row justify-content-center">
    @if (Model.Any())
    {
        @foreach (var musteri in Model)
        {
            <!-- Müşteri Kartı -->
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card shadow-sm border-light rounded-3">
                    <div class="card-body">
                        <h5 class="card-title text-center text-dark font-weight-bold">@musteri.Isim @musteri.Soyisim</h5>
                        <p class="card-text text-muted"><strong>Telefon:</strong> @musteri.Telefon</p>
                        <p><strong>Arabalar:</strong></p>
                        @if (musteri.Arabalar != null && musteri.Arabalar.Any())
                        {
                            <ul class="list-unstyled">
                                @foreach (var araba in musteri.Arabalar)
                                {
                                    <li class="text-dark">
                                        <a href="@Url.Action("Details", "Arabas", new { id = araba.Id })" class="text-decoration-none">@araba.Marka - @araba.Model</a>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">Arabası yok.</span>
                        }
                    </div>
                    <div class="card-footer d-flex justify-content-center">
                        <a href="@Url.Action("Details", "Musteris", new { id = musteri.Id })" class="btn btn-info btn-sm mx-1">Detay</a>
                        <a href="@Url.Action("Edit", "Musteris", new { id = musteri.Id })" class="btn btn-warning btn-sm mx-1">Düzenle</a>
                        <a href="@Url.Action("Delete", "Musteris", new { id = musteri.Id })" class="btn btn-danger btn-sm mx-1">Sil</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center text-muted">Kayıtlı müşteri bulunmamaktadır.</div>
    }
</div>

<!-- Stil ve Javascript -->
<style>
    /* Sayfa Başlığı */
    header {
        background: linear-gradient(145deg, #6c757d, #343a40);
        border-bottom: 1px solid #ddd;
        animation: fadeIn 1.5s ease-out;
    }

    header h1 {
        font-size: 3rem;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 3px;
        animation: slideUp 1s ease-out;
    }

    header p {
        font-size: 1.2rem;
        color: #f8f9fa;
    }

    .animatedTitle {
        animation: bounceInLeft 1s ease-out;
    }

   

    /* İstatistik Kartları */
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 20px;
    }

    .card-footer {
        background-color: #f8f9fa;
        border-top: 1px solid #ddd;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #343a40;
    }

    .display-4 {
        font-size: 3rem;
        font-weight: bold;
        color: #007bff;
    }

    /* Butonlar */
    .btn {
        font-size: 14px;
        border-radius: 25px;
        padding: 8px 15px;
        transition: background-color 0.3s ease;
    }

    .btn-outline-secondary {
        color: #495057;
        border: 2px solid #6c757d;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-info {
        background-color: #17a2b8;
        border: none;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .text-muted {
        color: #6c757d;
    }

    .text-dark {
        color: #343a40;
    }

    .list-unstyled {
        padding-left: 0;
    }

    .list-unstyled li {
        font-size: 14px;
        margin-bottom: 5px;
    }
</style>
