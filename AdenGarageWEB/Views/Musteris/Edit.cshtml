@model Core.Models.Musteri

@{
    ViewData["Title"] = "Müşteri Düzenle";
}

<h1 class="text-center mb-4 text-warning">Müşteri Düzenle</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-primary text-white">
                    <h4 class="m-0">Müşteri Bilgileri Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <!-- Isim Alanı -->
                        <div class="form-group mb-3">
                            <label asp-for="Isim" class="form-label fw-bold"></label>
                            <input asp-for="Isim" class="form-control shadow-sm" placeholder="Adınızı girin" />
                            <span asp-validation-for="Isim" class="text-danger"></span>
                        </div>

                        <!-- Soyisim Alanı -->
                        <div class="form-group mb-3">
                            <label asp-for="Soyisim" class="form-label fw-bold"></label>
                            <input asp-for="Soyisim" class="form-control shadow-sm" placeholder="Soyadınızı girin" />
                            <span asp-validation-for="Soyisim" class="text-danger"></span>
                        </div>

                        <!-- Telefon Alanı -->
                        <div class="form-group mb-3">
                            <label asp-for="Telefon" class="form-label fw-bold"></label>
                            <input asp-for="Telefon" class="form-control shadow-sm" placeholder="Telefon numaranızı girin" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>

                        <!-- Kaydet Butonu -->
                        <div class="form-group d-grid gap-2">
                            <input type="submit" value="Kaydet" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm shadow-sm rounded-pill">Listeye Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sayfa Altı -->



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
