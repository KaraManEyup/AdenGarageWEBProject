@model Core.Models.Musteri

@{
    ViewData["Title"] = "Yeni Müşteri Ekle";
}

<h1 class="text-center mb-4 text-warning">Yeni Müşteri Ekle</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Isim Alanı -->
            <div class="form-group mb-3">
                <label asp-for="Isim" style="color:whitesmoke" class="form-label fw-bold"></label>
                <input asp-for="Isim"  class="form-control shadow-sm" placeholder="Adınızı girin" />
                <span asp-validation-for="Isim" class="text-danger"></span>
            </div>

            <!-- Soyisim Alanı -->
            <div class="form-group mb-3">
                <label asp-for="Soyisim" style="color:whitesmoke" class="form-label fw-bold"></label>
                <input asp-for="Soyisim" class="form-control shadow-sm" placeholder="Soyadınızı girin" />
                <span asp-validation-for="Soyisim" class="text-danger"></span>
            </div>

            <!-- Telefon Alanı -->
            <div class="form-group mb-3">
                <label asp-for="Telefon" style="color:whitesmoke" class="form-label fw-bold"></label>
                <input asp-for="Telefon" class="form-control shadow-sm" placeholder="Telefon numaranızı girin" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>

            <!-- Gönder Butonu -->
            <div class="form-group d-grid gap-2">
                <input type="submit" value="Kaydet" class="btn btn-success btn-lg shadow-sm rounded-pill" />
            </div>
        </form>
    </div>
</div>

<!-- Geri Git Linki -->
<div class="text-center mt-4">
    <a asp-action="Index" style="color:white" class="btn btn-outline-warning shadow-sm rounded-3">Listeye Dön</a>
</div>




