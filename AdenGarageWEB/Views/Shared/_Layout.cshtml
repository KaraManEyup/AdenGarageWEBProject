<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ADEN GARAGE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <!-- Logo ve Ana Başlık -->
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/logo.png" alt="Aden Garage" class="img-fluid" style="max-height: 40px;" />
                    <span class="ms-2 fw-bold">Aden Garage</span>
                </a>

                <!-- Navbar Toggler (Mobil Görünüm İçin) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"><img src="~/logo.png" /></span>
                </button>

                <!-- Navbar Menüsü -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Index", "Home")" style="font-weight: 500;">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Musteris")" style="font-weight: 500;">Müşteriler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Arabas")" style="font-weight: 500;">Arabalar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white rounded-pill px-4 py-2" href="@Url.Action("Create", "Musteris")" style="font-weight: 500;">
                                Yeni Müşteri Ekle
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 text-center mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <h4 class="fw-bold mb-3">İletişim</h4>
                    <p><i class="bi bi-geo-alt-fill"></i> AdenGarage, Ankara, Türkiye</p>
                    <p><i class="bi bi-telephone-fill"></i> +90 536 773 17 69</p>
                    <p><i class="bi bi-envelope-fill"></i> eyupskaraman@gmail.com</p>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0 text-center">
                    <h4 class="fw-bold mb-3">Bizi Takip Edin</h4>
                    <div>
                        <a href="https://facebook.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-facebook"></i></a>
                        <a href="https://twitter.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-twitter"></i></a>
                        <a href="https://instagram.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-instagram"></i></a>
                        <a href="https://linkedin.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <h4 class="fw-bold mb-3">Hızlı Erişim</h4>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Index", "Home")" class="text-white">Anasayfa</a></li>
                        <li><a href="@Url.Action("Create", "Musteris")" class="text-white">Yeni Müşteri Ekle</a></li>
                        <li><a href="@Url.Action("Index", "Musteris")" class="text-white">Müşteri Listele</a></li>
                    </ul>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col text-center">
                    <p class="mb-0">&copy; 2024 AdenGarage. Tüm hakları saklıdır.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
