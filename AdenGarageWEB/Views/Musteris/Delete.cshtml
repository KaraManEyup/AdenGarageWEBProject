@model Core.Models.Musteri

@{
    ViewData["Title"] = "Müşteri Sil";
}

<h1 class="text-center mb-4 text-danger">Müşteri Sil</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-danger text-white">
                    <h4 class="m-0">Müşteri Silme İşlemi</h4>
                </div>
                <div class="card-body">
                    <h3 class="text-center text-warning mb-4">Bu müşteriyi silmek istediğinizden emin misiniz?</h3>

                    <!-- Müşteri Bilgileri Tablosu -->
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Bilgi Türü</th>
                                <th>Değer</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="fw-bold">Ad</td>
                                <td>@Html.DisplayFor(model => model.Isim)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Soyad</td>
                                <td>@Html.DisplayFor(model => model.Soyisim)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Telefon</td>
                                <td>@Html.DisplayFor(model => model.Telefon)</td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Silme Formu -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-danger btn-lg px-5 shadow-sm">Sil</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-5 ms-3 shadow-sm">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

