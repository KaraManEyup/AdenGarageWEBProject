@model Core.Models.Musteri

@{
    ViewData["Title"] = "Müşteri Sil";
}

<h1 class="text-center mb-4 text-danger">Müşteri Sil</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-danger text-white">
                    <h4 class="m-0">Müşteri Silme İşlemi</h4>
                </div>
                <div class="card-body">
                    <h3 class="text-center text-warning">Bu müşteriyi silmek istediğinizden emin misiniz?</h3>
                    <div>
                        <h4>Müşteri Bilgileri</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-3 fw-bold">
                                @Html.DisplayNameFor(model => model.Isim)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Isim)
                            </dd>
                            <dt class="col-sm-3 fw-bold">
                                @Html.DisplayNameFor(model => model.Soyisim)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Soyisim)
                            </dd>
                            <dt class="col-sm-3 fw-bold">
                                @Html.DisplayNameFor(model => model.Telefon)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Telefon)
                            </dd>
                        </dl>
                    </div>

                    <!-- Silme Formu -->
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Sil" class="btn btn-danger btn-lg" />
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm shadow-sm rounded-pill">Listeye Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sayfa Altı -->
<footer class="bg-dark text-white text-center py-4 mt-5">
    <div class="container">
        <p class="mb-0">&copy; 2024 AdenGarage. Tüm hakları saklıdır.</p>
    </div>
</footer>
