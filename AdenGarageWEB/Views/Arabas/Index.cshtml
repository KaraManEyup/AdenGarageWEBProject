@model IEnumerable<Core.Models.Araba>

@{
    ViewData["Title"] = "Araba Listesi";
}

<!-- Sayfa Başlığı -->
<header class="text-center py-5 bg-gradient text-white border-bottom">
    <h1 class="display-4 font-weight-bold animatedTitle">Araba Listesi</h1>
    <p class="lead mb-4">Tüm araçlar hakkında bilgilere anında ulaşın. Daha fazlasını keşfedin!</p>

    <!-- İstatistik ve Heyecan Verici Bilgiler -->
    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
        <div class="card shadow border-light rounded-lg">
            <div class="card-body text-center">
                <h5 class="card-title">Toplam Araç Sayısı</h5>
                <p class="card-text display-4 text-success">@ViewData["ToplamArabaSayisi"]</p>
            </div>
        </div>
    </div>
</header>


<!-- Araba Listeleme Bölümü -->
<div class="container mt-5">
    <div class="d-flex justify-content-between mb-4">
        <!-- Sıralama Butonları -->
        <div>
            <a class="btn btn-custom" asp-action="Index" asp-route-sortOrder="MarkaAsc">Marka Artan |↑|</a>
            <a class="btn btn-custom" asp-action="Index" asp-route-sortOrder="MarkaDesc">Marka Azalan |↓|</a>
        </div>
        <!-- Yeni Araba Ekle Butonu -->
        <div>
            <a asp-action="Create" class="btn btn-create">Yeni Araba Ekle</a>
        </div>
    </div>

    <!-- Araba Listesi Tablosu -->
    <div class="table-wrapper fadeIn">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Marka</th>
                    <th>Model</th>
                    <th>Plaka</th>
                    <th>Kilometre</th>
                    <th>İşlem</th>
                    <th>Tarih</th>
                    <th>Müşteri</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var araba in Model)
                {
                    <tr>
                        <td>@araba.Marka</td>
                        <td>@araba.Model</td>
                        <td>@araba.Plaka</td>
                        <td>@araba.Km</td>
                        <td>@araba.Islem</td>
                        <td>
                            @if (araba.Tarih.HasValue)
                            {
                                @araba.Tarih.Value.ToString("dd/MM/yyyy")
                            }
                        </td>
                        <td>
                            @if (araba.MusteriId != null)
                            {
                                <span>@araba.Musteri.Isim @araba.Musteri.Soyisim</span>
                            }
                            else
                            {
                                <span class="text-warning">Müşteri Bilgisi Yok</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@araba.Id" class="btn btn-edit">Düzenle</a>
                            <a asp-action="Details" asp-route-id="@araba.Id" class="btn btn-info">Detaylar</a>
                            <a asp-action="Delete" asp-route-id="@araba.Id" class="btn btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Stil ve Tasarım -->
<style>
    /* Sayfa Başlığı */
    header {
        background: linear-gradient(145deg, #6c757d, #343a40);
        border-bottom: 1px solid #ddd;
        animation: fadeIn 1.5s ease-out;
    }

        header h1 {
            font-size: 3rem;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 3px;
            animation: slideUp 1s ease-out;
        }

        header p {
            font-size: 1.2rem;
            color: #f8f9fa;
        }

    .animatedTitle {
        animation: bounceInLeft 1s ease-out;
    }



    /* İstatistik Kartları */
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

    .card-body {
        padding: 20px;
    }

    .card-footer {
        background-color: #f8f9fa;
        border-top: 1px solid #ddd;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #343a40;
    }

    .display-4 {
        font-size: 3rem;
        font-weight: bold;
        color: #007bff;
    }

    /* Butonlar */
    .btn {
        font-size: 14px;
        border-radius: 25px;
        padding: 8px 15px;
        transition: background-color 0.3s ease;
    }

    .btn-outline-secondary {
        color: #495057;
        border: 2px solid #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-info {
        background-color: #17a2b8;
        border: none;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .text-muted {
        color: #6c757d;
    }

    .text-dark {
        color: #343a40;
    }

    .list-unstyled {
        padding-left: 0;
    }

        .list-unstyled li {
            font-size: 14px;
            margin-bottom: 5px;
        }
</style>
