@model ApplicationUser

@{
    ViewData["Title"] = "Profil";
}

<div class="profile-container">
    <div class="profile-card">
        <div class="profile-header">
            <div class="avatar">@Model.FullName.Substring(0, 1).ToUpper()</div>
            <div class="profile-info">
                <h2>@Model.FullName</h2>
            </div>
        </div>

        <div class="profile-body">
            <div class="info-item">
                <strong>Telefon:</strong> @Model.PhoneNumber
            </div>
            <div class="info-item">
                <strong>Cinsiyet:</strong> @Model.Gender
            </div>
            <div class="info-item">
                <strong>Doğum Tarihi:</strong> @Model.DateOfBirth?.ToString("dd/MM/yyyy")
            </div>
        </div>

        <div class="profile-footer">
            <a href="@Url.Action("EditProfile", "Account")" class="btn">Profil Düzenle</a>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    /* Genel Stil */
    body {
        background-color: #ffffff; /* Beyaz arka plan */
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .profile-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 40px;
    }

    .profile-card {
        background-color: #ffffff;
        width: 100%;
        max-width: 600px;
        border-radius: 20px;
        box-shadow: 0px 12px 40px rgba(0, 0, 0, 0.1);
        padding: 40px;
        transition: all 0.3s ease;
    }

        .profile-card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 20px 60px rgba(0, 0, 0, 0.15);
        }

    .profile-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background-color: #4CAF50;
        color: white;
        font-size: 40px;
        font-weight: bold;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
        transition: transform 0.3s ease;
    }

        .avatar:hover {
            transform: scale(1.1);
        }

    .profile-info h2 {
        font-size: 2rem;
        font-weight: 600;
        color: #333;
        margin: 0;
    }

    .profile-info p {
        font-size: 1.1rem;
        font-weight: 300;
        color: #777;
    }

    .profile-body {
        margin-top: 20px;
    }

    .info-item {
        font-size: 1.1rem;
        color: #444;
        margin-bottom: 15px;
        display: flex;
        justify-content: space-between;
        padding: 10px;
        border-bottom: 1px solid #e2e2e2;
    }

        .info-item strong {
            color: #4CAF50;
            font-weight: 600;
        }

    .profile-footer {
        margin-top: 30px;
        text-align: center;
    }

    .btn {
        background-color: #4CAF50; /* Yeşil buton */
        color: white;
        padding: 15px 30px;
        font-size: 1.1rem;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn:hover {
            background-color: #45a049;
            transform: scale(1.05);
        }
</style>
