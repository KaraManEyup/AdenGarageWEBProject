@model IEnumerable<Core.Models.Araba>

@{
    ViewData["Title"] = "Araba Listesi";
}

<h1 style="color:aliceblue" class="text-center mb-4">Araba Listesi</h1>

<div class="d-flex justify-content-between mb-3">
    <div>
        <a class="btn btn-outline-warning" asp-action="Index" asp-route-sortOrder="MarkaAsc">Isim Artan |↑|</a>
        <a class="btn btn-outline-warning" asp-action="Index" asp-route-sortOrder="MarkaDesc">Isim Azalan |↓|</a>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-warning">Yeni Araba Ekle</a>
    </div>
</div>
<table class="table table-hover kutu" style="background-color: rgba(0,0,0,0.6)">
    <thead style="font-size:large">
        <tr style="color:gold">
            <th class="text-center">Marka</th>
            <th class="text-center">Model</th>
            <th class="text-center">Plaka</th>
            <th class="text-center">Kilometre</th>
            <th class="text-center">İşlem</th>
            <th class="text-center">Tarih</th>
            <th class="text-center">Müşteri</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var araba in Model)
        {
            <tr style="color:white" class="text-center">
                <td class="text-center"><b>@araba.Marka</b></td>
                <td class="text-center"><b>@araba.Model</b></td>
                <td class="text-center"><b>@araba.Plaka</b></td>
                <td class="text-center"><b>@araba.Km</b></td>
                <td class="text-center"><b>@araba.Islem</b></td>
                <td class="text-center">
                    <b>
                        @if (araba.Tarih.HasValue)
                        {
                            @araba.Tarih.Value.ToString("dd/MM/yyyy")
                        }
                        else
                        {

                        }
                    </b>

                <td class="text-center">
                        @if (araba.MusteriId != null)
                        {
                        <span><b>@araba.Musteri.Isim</b></span> <span><b>@araba.Musteri.Soyisim</b></span>
                        }
                        else
                        {
                        <span class="text-warning">Müşteri Girilmemiş!</span>
                        }
                </td>

                <!-- İşlem butonları -->
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@araba.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@araba.Id" style="color:white" class="btn btn-info btn-sm shadow-sm rounded-pill" style="color:paleturquoise;">Detaylar</a>&nbsp;|&nbsp;
                    <a asp-action="Delete" asp-route-id="@araba.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table th, .table td {
        text-align: center;
        padding: 10px;
        vertical-align: middle;
        word-wrap: break-word;
        max-width: 200px;
    }

    .table th {
        background-color: #333;
    }

    .table td {
        background-color: rgba(0, 0, 0, 0.5);
    }

    .table-responsive {
        overflow-x: auto;
    }

    .btn-warning, .btn-info, .btn-danger {
        padding: 5px 10px;
    }

    .btn-outline-warning {
        border: 2px solid gold;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(255, 255, 255, 0.2);
    }
</style>