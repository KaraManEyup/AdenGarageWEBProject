@model Core.Models.Araba

@{
    ViewData["Title"] = "Yeni Araba Ekle";
}

<div class="container mt-5" style="background-color: #f7f8fc; border-radius: 15px; padding: 30px;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Başlık -->
            <div class="text-center mb-4">
                <h2 class="text-primary" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Yeni Araba Ekle</h2>
                <p class="text-muted" style="font-size: 1.1rem;">Araba bilgilerini eklemek için formu doldurun.</p>
            </div>

            <!-- Form Başlangıcı -->
            <div class="card shadow-lg" style="border-radius: 15px;">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Marka -->
                        <div class="form-group mb-4">
                            <label for="Marka" class="font-weight-bold text-dark">Marka</label>
                            <input asp-for="Marka" class="form-control form-control-lg" style="border-radius: 10px;" placeholder="Araba markasını girin" />
                            <span asp-validation-for="Marka" class="text-danger"></span>
                        </div>

                        <!-- Model -->
                        <div class="form-group mb-4">
                            <label for="Model" class="font-weight-bold text-dark">Model</label>
                            <input asp-for="Model" class="form-control form-control-lg" style="border-radius: 10px;" placeholder="Araba modelini girin" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <!-- Plaka -->
                        <div class="form-group mb-4">
                            <label for="Plaka" class="font-weight-bold text-dark">Plaka</label>
                            <input asp-for="Plaka" class="form-control form-control-lg" style="border-radius: 10px;" placeholder="Araba plakasını girin" />
                            <span asp-validation-for="Plaka" class="text-danger"></span>
                        </div>

                        <!-- Km -->
                        <div class="form-group mb-4">
                            <label for="Km" class="font-weight-bold text-dark">Kilometre</label>
                            <input asp-for="Km" class="form-control form-control-lg" style="border-radius: 10px;" placeholder="Kilometre bilgisini girin" />
                            <span asp-validation-for="Km" class="text-danger"></span>
                        </div>

                        <!-- İşlem -->
                        <div class="form-group mb-4">
                            <label for="Islem" class="font-weight-bold text-dark">Yapılan İşlem</label>
                            <input asp-for="Islem" class="form-control form-control-lg" style="border-radius: 10px;" placeholder="Yapılan işlemi girin" />
                            <span asp-validation-for="Islem" class="text-danger"></span>
                        </div>

                        <!-- Tarih -->
                        <div class="form-group mb-4">
                            <label for="Tarih" class="font-weight-bold text-dark">Tarih</label>
                            <input asp-for="Tarih" class="form-control form-control-lg" style="border-radius: 10px;" type="date" />
                            <span asp-validation-for="Tarih" class="text-danger"></span>
                        </div>

                        <!-- Müşteri Seçimi -->
                        <div class="form-group mb-4">
                            <label for="MusteriId" class="font-weight-bold text-dark">Müşteri</label>
                            <select asp-for="MusteriId" class="form-control form-control-lg" style="border-radius: 10px;" asp-items="@(ViewData["MusteriId"] as SelectList)">
                                <option value="">Müşteri Seçiniz</option>
                            </select>
                        </div>

                        <!-- Kaydet Butonu -->
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Kaydet" class="btn btn-success btn-lg w-100" style="border-radius: 10px; font-weight: bold;" />
                        </div>
                    </form>
                </div>
            </div>

            <!-- Listeye Dön Butonu -->
            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-outline-danger btn-lg" style="border-radius: 10px; width: 100%;">Listeye Dön</a>
            </div>
        </div>
    </div>
</div>

