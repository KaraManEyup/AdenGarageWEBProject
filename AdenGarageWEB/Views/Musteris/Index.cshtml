@model IEnumerable<Core.Models.Musteri>

@{
    ViewData["Title"] = "Müşteri Listesi";
}

<h1 style="color:aliceblue; text-align:center;" class="mb-4">MÜŞTERİLER</h1>

<a class="btn btn-outline-warning" href="@Url.Action("Index", "Musteris", new { sortOrder = "IsimAsc" })">Isim Artan |↑|</a>
<a class="btn btn-outline-warning" href="@Url.Action("Index", "Musteris", new { sortOrder = "IsimDesc" })">Isim Azalan |↓|</a>
<table style="background-color: rgba(0,0,0,0.6) " class="table table-hover kutu">
    

    <thead style="font-size:large">
        <tr style="color:gold">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Isim)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Soyisim)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th class="text-center">
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody style="font-synthesis-style:unset">
        @foreach (var item in Model)
        {
            <tr style="color:white;">
                <td class="text-center">
                    <b> @Html.DisplayFor(modelItem => item.Isim)</b>
                </td>
                <td class="text-center">
                    <b> @Html.DisplayFor(modelItem => item.Soyisim)</b>
                </td>
                <td class="text-center">
                   <b> @Html.DisplayFor(modelItem => item.Telefon)</b>
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" style="color:white" class="btn btn-warning btn-sm shadow-sm rounded-pill" style="color:gold;">Düzenle</a>&nbsp;|&nbsp;
                    <a asp-action="Details" asp-route-id="@item.Id" style="color:white" class="btn btn-info btn-sm shadow-sm rounded-pill" style="color:paleturquoise;">Detaylar</a>&nbsp;|&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id" style="color:white" class="btn btn-danger btn-sm shadow-sm rounded-pill">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="text-center mt-4">
    <a asp-action="Create" class="btn btn-success btn-lg shadow-sm rounded-pill" style="background-color:darkorchid;">Yeni Müşteri Ekle</a>
</p>

