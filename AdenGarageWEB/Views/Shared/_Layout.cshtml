<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ADEN GARAGE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApplication1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Musteris" asp-action="Index">Musteriler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Arabas" asp-action="Index">Arabalar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <div class="d-flex flex-column min-vh-100">
        <!-- Sayfa İçeriği -->
        <main class="flex-grow-1">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class=" bg-dark text-white py-4 text-center fixed-footer">
            <div class="container">
                <div class="row">
                    <!-- İletişim Bilgileri -->
                    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                        <h4 class="fw-bold mb-3">İletişim</h4>
                        <p><i class="bi bi-geo-alt-fill"></i> AdenGarage, Ankara, Türkiye</p>
                        <p><i class="bi bi-telephone-fill"></i> +90 536 773 17 69</p>
                        <p><i class="bi bi-envelope-fill"></i> eyupskaraman@gmail.com</p>
                    </div>

                    <!-- Sosyal Medya Bağlantıları -->
                    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0 text-center">
                        <h4 class="fw-bold mb-3">Bizi Takip Edin</h4>
                        <div>
                            <a href="https://facebook.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-facebook"></i></a>
                            <a href="https://twitter.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-twitter"></i></a>
                            <a href="https://instagram.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-instagram"></i></a>
                            <a href="https://linkedin.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>

                    <!-- Hızlı Erişim -->
                    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                        <h4 class="fw-bold mb-3">Hızlı Erişim</h4>
                        <ul class="list-unstyled">
                            <li><a href="@Url.Action("Index", "Home")" class="text-white">Anasayfa</a></li>
                            <li><a href="@Url.Action("Create", "Musteris")" class="text-white">Yeni Müşteri Ekle</a></li>
                            <li><a href="@Url.Action("Index", "Musteris")" class="text-white">Müşteri Listele</a></li>
                        </ul>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col text-center">
                        <p class="mb-0">&copy; 2024 AdenGarage. Tüm hakları saklıdır.</p>
                    </div>
                </div>
            </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    </div>
</body>
</html>
