@model Core.Models.Musteri

@{
    ViewData["Title"] = "Müşteri Detayları";
}

<h1 class="text-center mb-4 text-warning">Müşteri Detayları</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4 text-light">İsim</dt>
            <dd class="col-sm-8 text-light">@Model.Isim</dd>

            <dt class="col-sm-4 text-light">Soyisim</dt>
            <dd class="col-sm-8 text-light">@Model.Soyisim</dd>

            <dt class="col-sm-4 text-light">Telefon</dt>
            <dd class="col-sm-8 text-light">@Model.Telefon</dd>

            <dt class="col-sm-4 text-light">Arabalar</dt>
            <dd class="col-sm-8">
                @if (Model.Arabalar != null && Model.Arabalar.Any())
                {
                    <ul>
                        @foreach (var araba in Model.Arabalar)
                        {
                            <li class="text-light">
                                @araba.Marka - @araba.Model (@araba.Km km, @araba.Islem)
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Bu müşteri için araba kaydı yok.</p>
                }
            </dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
        <div class="text-center mt-4">
            <a asp-action="Index" style="color:white" class="btn btn-danger">Listeye Dön</a>
        </div>
    </div>
</div>
