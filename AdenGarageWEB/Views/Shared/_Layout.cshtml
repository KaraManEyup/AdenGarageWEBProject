<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ADEN GARAGE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <style>
        /* Yan Menü (Sidebar) */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 250px;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            transition: all 0.3s;
        }

            .sidebar a {
                display: block;
                color: white;
                padding: 10px 20px;
                text-decoration: none;
                font-size: 18px;
                transition: background-color 0.3s ease;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    color: #f8f9fa;
                }

            .sidebar .active {
                background-color: #007bff;
                color: white;
            }

        /* Ana içerik */
        .main-content {
            margin-left: 250px;
            transition: margin-left 0.3s;
        }

        .sidebar-toggle {
            position: absolute;
            top: 20px;
            right: -40px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 50%;
            padding: 10px;
            cursor: pointer;
            font-size: 18px;
        }

        .sidebar.collapsed {
            width: 0;
        }

        .main-content.collapsed {
            margin-left: 0;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="custom-navbar shadow-lg">
            <div class="container d-flex align-items-center justify-content-between">
                <!-- Logo -->
                <a href="@Url.Action("Index", "Home")" class="logo d-flex align-items-center">
                    <img src="~/logo.png" alt="Aden Garage Logo" class="logo-img" />
                    <span class="logo-text">Aden Garage</span>
                </a>

                <!-- Navbar Menüsü -->
                <ul class="nav-menu d-flex align-items-center">
                    <li><a href="@Url.Action("Index", "Home")" class="nav-link">Anasayfa</a></li>
                    <li><a href="@Url.Action("Index", "Musteris")" class="nav-link">Müşteriler</a></li>
                    <li><a href="@Url.Action("Index", "Arabas")" class="nav-link">Arabalar</a></li>
                    <li><a href="@Url.Action("Create", "Musteris")" class="nav-link btn-add">+ Müşteri Ekle</a></li>
                </ul>

                <!-- Mobil Menü Toggler -->
                <div class="menu-toggler">
                    <div class="bar"></div>
                    <div class="bar"></div>
                    <div class="bar"></div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Yan Menü (Sidebar) -->
    <div class="sidebar">
        <button class="sidebar-toggle" id="sidebarToggle">&#9776;</button>
        <a href="@Url.Action("Index", "Home")" class="active">Anasayfa</a>
        <a href="@Url.Action("Index", "Musteris")">Müşteriler</a>
        <a href="@Url.Action("Index", "Arabas")">Arabalar</a>
        <a href="@Url.Action("Create", "Musteris")">+ Müşteri Ekle</a>
    </div>

    <!-- Ana İçerik -->
    <main class="main-content">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 text-center mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <h4 class="fw-bold mb-3">İletişim</h4>
                    <p><i class="bi bi-geo-alt-fill"></i> AdenGarage, Ankara, Türkiye</p>
                    <p><i class="bi bi-telephone-fill"></i> +90 536 773 17 69</p>
                    <p><i class="bi bi-envelope-fill"></i> eyupskaraman@gmail.com</p>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0 text-center">
                    <h4 class="fw-bold mb-3">Bizi Takip Edin</h4>
                    <div>
                        <a href="https://facebook.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-facebook"></i></a>
                        <a href="https://twitter.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-twitter"></i></a>
                        <a href="https://instagram.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-instagram"></i></a>
                        <a href="https://linkedin.com" class="btn btn-outline-light btn-lg mx-2"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <h4 class="fw-bold mb-3">Hızlı Erişim</h4>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Index", "Home")" class="text-white">Anasayfa</a></li>
                        <li><a href="@Url.Action("Create", "Musteris")" class="text-white">Yeni Müşteri Ekle</a></li>
                        <li><a href="@Url.Action("Index", "Musteris")" class="text-white">Müşteri Listele</a></li>
                    </ul>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col text-center">
                    <p class="mb-0">&copy; 2024 AdenGarage. Tüm hakları saklıdır.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            document.querySelector('.sidebar').classList.toggle('collapsed');
            document.querySelector('.main-content').classList.toggle('collapsed');
        });
    </script>
</body>
</html>
