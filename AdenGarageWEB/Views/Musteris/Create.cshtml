@model Core.Models.Musteri

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4 text-warning">Yeni Müşteri Ekle</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Isim Alanı -->
            <div class="form-group mb-3">
                <label asp-for="Isim" style="color:whitesmoke" class="form-label fw-bold"></label>
                <input asp-for="Isim" class="form-control shadow-sm" placeholder="Adınızı girin" />
                <span asp-validation-for="Isim" class="text-danger"></span>
            </div>

            <!-- Soyisim Alanı -->
            <div class="form-group mb-3">
                <label asp-for="Soyisim" style="color:whitesmoke" class="form-label fw-bold"></label>
                <input asp-for="Soyisim" class="form-control shadow-sm" placeholder="Soyadınızı girin" />
                <span asp-validation-for="Soyisim" class="text-danger"></span>
            </div>

            <!-- Telefon Alanı -->
            <div class="form-group mb-3">
                <label asp-for="Telefon" style="color:whitesmoke" class="form-label fw-bold"></label>
                <input asp-for="Telefon" class="form-control shadow-sm" placeholder="Telefon numaranızı girin" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>

            <!-- Arabalar için Alanlar -->
            <div id="arabalar-container">
                <h5 style="color:whitesmoke" class="form-label fw-bold">Arabalar</h5>
                <div class="form-group">
                    <label style="color:whitesmoke" class="form-label fw-bold">Marka</label>
                    <input name="Arabalar[0].Marka" class="form-control" placeholder="Marka Girin" />
                </div>
                <div class="form-group">
                    <label style="color:whitesmoke" class="form-label fw-bold">Model</label>
                    <input name="Arabalar[0].Model" class="form-control" placeholder=" Model Girin" />
                </div>
                <div class="form-group">
                    <label style="color:whitesmoke" class="form-label fw-bold">Kilometre</label>
                    <input name="Arabalar[0].Km" class="form-control" placeholder="Kilometre Girin" />
                </div>
                <div class="form-group">
                    <label style="color:whitesmoke" class="form-label fw-bold">İşlem</label>
                    <input name="Arabalar[0].Islem" class="form-control" placeholder=" Islem Girin" />
                </div>
                <div class="form-group">
                    <label style="color:whitesmoke" class="form-label fw-bold">Plaka</label>
                    <input name="Arabalar[0].Plaka" class="form-control" placeholder="Plaka Girin" />
                </div>
                <div class="form-group">
                    <label style="color:whitesmoke" class="form-label fw-bold">Geliş Tarihi</label>
                    <input type="date" name="Arabalar[0].Tarih" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>
            </div>

            <div class="form-group d-grid gap-2">
                <input type="submit" value="Kaydet" class="btn btn-success btn-lg shadow-sm rounded-pill" />
            </div>
        </form>
        <div class="text-center mt-4">
            <a asp-action="Index" style="color:white" class="btn btn-danger">Listeye Dön</a>
        </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
