@model IEnumerable<Core.Models.Araba>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-light my-4">Araba Listesi</h1>


<table style="background-color: rgba(255,255,255,0.3)" class="table table-hover kutu">
    <thead style="font-size:large">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Km)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Islem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musteri)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <tbody style="font-synthesis-style:unset ">
            @foreach (var item in Model)
            {
            <tr style="color:ivory;">

                <td>
                        @Html.DisplayFor(modelItem => item.Marka)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Km)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Islem)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Tarih)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Musteri.Isim)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
            }
    </tbody>
</table>
<p class="text-center mt-4">
    <a asp-action="Create" class="btn btn-success btn-lg shadow-sm rounded-pill" style="background-color:darkorchid;">Yeni arabaa Ekle</a>
</p>


