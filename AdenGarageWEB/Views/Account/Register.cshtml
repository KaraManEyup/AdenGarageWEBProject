@model RegisterViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Üye Ol</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        @* Full Name *@
                        <div class="mb-3">
                            <label for="FullName" class="form-label">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control" placeholder="Adınızı ve Soyadınızı Girin" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        @* Email *@
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Geçerli bir email adresi girin" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        @* Phone Number *@
                        <div class="mb-3">
                            <label for="PhoneNumber" class="form-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="05xx xxx xx xx" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Gender" class="form-label">Cinsiyet</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="">Seçiniz</option>
                                <option value="Erkek">Erkek</option>
                                <option value="Kadın">Kadın</option>
                                <option value="Diğer">Diğer</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        @* Date of Birth *@
                        <div class="mb-3">
                            <label for="DateOfBirth" class="form-label">Doğum Tarihi</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        @* Password *@
                        <div class="mb-3">
                            <label for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi Girin" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        @* Confirm Password *@
                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifrenizi Tekrar Girin" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        @* Register Button *@
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    Zaten bir hesabınız var mı?
                    <a href="@Url.Action("Login", "Account")" class="text-primary">Giriş Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>
